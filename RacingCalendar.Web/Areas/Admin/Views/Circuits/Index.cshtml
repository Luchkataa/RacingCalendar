@model IEnumerable<RacingCalendar.ViewModels.CircuitViewModel>

@{
    ViewData["Title"] = "Manage Circuits";
}

<h2 class="mb-4">All Circuits</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Add New Circuit</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Country</th>
            <th>Layout Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var circuit in Model)
        {
            <tr>
                <td>@circuit.Name</td>
                <td>@circuit.Country</td>
                <td>
                    @if (!string.IsNullOrEmpty(circuit.LayoutImageUrl))
                    {
                        <img src="@circuit.LayoutImageUrl" alt="Layout" width="100" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@circuit.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@circuit.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
