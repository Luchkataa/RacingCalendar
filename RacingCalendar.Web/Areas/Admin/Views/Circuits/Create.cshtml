@model RacingCalendar.ViewModels.CircuitViewModel
@{
    ViewData["Title"] = "Add New Circuit";
    Layout = "_Layout";
}

<style>
    /* Admin Form Styling */
    .admin-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
        background: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
    }

    .admin-header {
        color: #2c3e50;
        margin-bottom: 2rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #e10600;
    }

    .admin-form .form-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
    }

    .admin-form .form-control {
        border: 1px solid #ced4da;
        border-radius: 4px;
        padding: 0.5rem 0.75rem;
        transition: all 0.3s;
    }

    .admin-form .form-control:focus {
        border-color: #e10600;
        box-shadow: 0 0 0 0.25rem rgba(225, 6, 0, 0.1);
    }

    .btn-admin-primary {
        background-color: #e10600;
        border-color: #e10600;
        color: white;
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s;
    }

    .btn-admin-primary:hover {
        background-color: #c10500;
        border-color: #c10500;
        transform: translateY(-2px);
    }

    .btn-admin-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s;
    }

    .btn-admin-secondary:hover {
        background-color: #5a6268;
        border-color: #5a6268;
        transform: translateY(-2px);
    }

    .validation-message {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    .navbar-brand {
        font-size: 1.5rem;
        letter-spacing: 0.5px;
    }

    .nav-link {
        padding: 0.5rem 1rem;
        transition: all 0.3s;
    }

        .nav-link:hover {
            color: #e10600 !important;
        }

    .btn-link {
        text-decoration: none;
        padding: 0.5rem 1rem;
    }

        .btn-link:hover {
            text-decoration: none;
        }
</style>

<div class="admin-container">
    <h2 class="admin-header">Add New Circuit</h2>

    <form asp-action="Create" method="post" class="admin-form">
        <div class="mb-4">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="validation-message"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Country" class="form-label"></label>
            <input asp-for="Country" class="form-control" />
            <span asp-validation-for="Country" class="validation-message"></span>
        </div>

        <div class="mb-4">
            <label asp-for="LayoutImageUrl" class="form-label">Track Layout Image URL</label>
            <input asp-for="LayoutImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
            <span asp-validation-for="LayoutImageUrl" class="validation-message"></span>
        </div>

        <div class="d-flex gap-3">
            <button type="submit" class="btn btn-admin-primary">Save Circuit</button>
            <a asp-action="Index" class="btn btn-admin-secondary">Cancel</a>
        </div>
    </form>
</div>