@model RacingCalendar.ViewModels.CircuitViewModel
@{
    ViewData["Title"] = "Edit Circuit";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

<div class="admin-container">
    <h2 class="admin-header">Edit Circuit</h2>

    <form asp-action="Edit" method="post" class="admin-form">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="mb-4">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="validation-message"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Country" class="form-label"></label>
            <input asp-for="Country" class="form-control" />
            <span asp-validation-for="Country" class="validation-message"></span>
        </div>

        <div class="mb-4">
            <label asp-for="LayoutImageUrl" class="form-label">Track Layout Image URL</label>
            <input asp-for="LayoutImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
            <span asp-validation-for="LayoutImageUrl" class="validation-message"></span>
        </div>

        <div class="d-flex gap-3">
            <button type="submit" class="btn btn-admin btn-admin-primary">
                <i class="fas fa-save me-1"></i> Update Circuit
            </button>
            <a asp-action="Index" class="btn btn-admin btn-admin-secondary">
                <i class="fas fa-times me-1"></i> Cancel
            </a>
        </div>
    </form>
</div>