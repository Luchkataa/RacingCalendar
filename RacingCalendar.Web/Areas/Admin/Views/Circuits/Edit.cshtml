@model RacingCalendar.ViewModels.CircuitViewModel

@{
    ViewData["Title"] = "Edit Circuit";
}

<h2>Edit Circuit</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Country" class="form-label"></label>
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LayoutImageUrl" class="form-label"></label>
        <input asp-for="LayoutImageUrl" class="form-control" />
        <span asp-validation-for="LayoutImageUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
