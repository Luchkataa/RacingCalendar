@model RacingCalendar.ViewModels.SeriesViewModel

@{
    ViewData["Title"] = "Add New Series";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin-container">
    <h2 class="admin-header">Add New Series</h2>

    <form asp-action="Create" method="post" class="admin-form">
        <div class="mb-4">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="validation-message"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="validation-message"></span>
        </div>

        <div class="d-flex gap-3">
            <button type="submit" class="btn btn-admin-primary">
                <i class="fas fa-save me-1"></i> Save Series
            </button>
            <a asp-action="Index" class="btn btn-admin-secondary">
                <i class="fas fa-times me-1"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}