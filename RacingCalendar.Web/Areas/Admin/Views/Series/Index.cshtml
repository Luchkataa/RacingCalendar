@model IEnumerable<RacingCalendar.ViewModels.SeriesViewModel>

@{
    ViewData["Title"] = "Manage Series";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Series</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var series in Model)
        {
            <tr>
                <td>@series.Name</td>
                <td>@series.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@series.Id" class="btn btn-warning btn-sm">Edit</a>
                    <form asp-action="Delete" asp-route-id="@series.Id" method="post" style="display:inline-block;"
                          onsubmit="return confirm('Are you sure you want to delete @series.Name?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
