@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin-dashboard">
    <div class="dashboard-header">
        <h1 class="dashboard-title">Admin Dashboard</h1>
        <p class="dashboard-subtitle">Manage your motorsports platform</p>
    </div>

    <div class="dashboard-stats mb-4">
        <div class="row g-4">
            <div class="col-md-6 col-lg-4">
                <div class="stat-card stat-card-circuits">
                    <div class="stat-icon">
                        <i class="fas fa-route"></i>
                    </div>
                    <div class="stat-content">
                        <h3>Circuits</h3>
                        <a asp-area="Admin" asp-controller="Circuits" asp-action="Index" class="btn btn-admin-primary btn-sm">Manage</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="stat-card stat-card-series">
                    <div class="stat-icon">
                        <i class="fas fa-trophy"></i>
                    </div>
                    <div class="stat-content">
                        <h3>Series</h3>
                        <a asp-area="Admin" asp-controller="Series" asp-action="Index" class="btn btn-admin-primary btn-sm">Manage</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="stat-card stat-card-drivers">
                    <div class="stat-icon">
                        <i class="fas fa-helmet-safety"></i>
                    </div>
                    <div class="stat-content">
                        <h3>Drivers</h3>
                        <a asp-area="Admin" asp-controller="Drivers" asp-action="Index" class="btn btn-admin-primary btn-sm">Manage</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="dashboard-actions mb-4">
        <div class="row g-4">
            <div class="col-md-6">
                <div class="action-card">
                    <div class="action-icon bg-danger">
                        <i class="fas fa-flag-checkered"></i>
                    </div>
                    <div class="action-content">
                        <h4>Races Management</h4>
                        <p>Schedule and manage all racing events</p>
                        <a asp-area="Admin" asp-controller="Races" asp-action="Index" class="btn btn-admin-primary">Manage Races</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="stat-card stat-card-teams">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-content">
                        <h3>Teams</h3>
                        <a asp-area="Admin" asp-controller="Teams" asp-action="Index" class="btn btn-admin-primary">Manage Teams</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="stats-summary">
        <div class="row g-4">
            <div class="col-md-3">
                <div class="stat-simple-card bg-primary text-center">
                    <h3>@(ViewBag.TotalCircuits ?? 0)</h3>
                    <p>Circuits</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-simple-card bg-success text-center">
                    <h3>@(ViewBag.TotalDrivers ?? 0)</h3>
                    <p>Drivers</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-simple-card bg-warning text-center">
                    <h3>@(ViewBag.TotalTeams ?? 0)</h3>
                    <p>Teams</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-simple-card bg-danger text-center">
                    <h3>@(ViewBag.UpcomingRaces ?? 0)</h3>
                    <p>Upcoming Races</p>
                </div>
            </div>
        </div>
    </div>
</div>