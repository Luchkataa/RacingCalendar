@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Welcome to the Admin Panel</h2>

<div class="row">
    <div class="col-md-4">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title">Circuits</h5>
                <p class="card-text">Manage all racing circuits.</p>
                <a asp-area="Admin" asp-controller="Circuits" asp-action="Index" class="btn btn-primary">Manage Circuits</a>
            </div>
            <div class="card-body">
                <h5 class="card-title">Circuits</h5>
                <p class="card-text">Manage all series.</p>
                <a asp-area="Admin" asp-controller="Series" asp-action="Index" class="btn btn-primary">Manage Series</a>
            </div>
            <div class="card-body">
                <h5 class="card-title">Teams</h5>
                <p class="card-text">Manage all racing teams.</p>
                <a asp-area="Admin" asp-controller="Teams" asp-action="Index" class="btn btn-primary">Manage Teams</a>
            </div>
            <div class="card-body">
                <h5 class="card-title">Teams</h5>
                <p class="card-text">Manage all drivers.</p>
                <a asp-area="Admin" asp-controller="Drivers" asp-action="Index" class="btn btn-primary">Manage Drivers</a>
            </div>
            <div class="card-body">
                <h5 class="card-title">Teams</h5>
                <p class="card-text">Manage all races.</p>
                <a asp-area="Admin" asp-controller="Races" asp-action="Index" class="btn btn-primary">Manage Drivers</a>
            </div>
    </div>
</div>