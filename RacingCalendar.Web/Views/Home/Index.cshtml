@{
    ViewData["Title"] = "Welcome to RacingCalendar";
    Layout = "_Layout";
    ViewBag.HideNavbar = true;
    ViewBag.HideFooter = true;
}

<link rel="stylesheet" href="~/css/index.css" />

<div class="rc-home-container">
    <div class="rc-hero">
        <h1>WELCOME TO RACING CALENDAR</h1>
        <p>Your one-stop destination for all upcoming motorsport events</p>
        <p>Formula 1, MotoGP, Supercars, and more — all in one calendar.</p>

        <div class="d-flex justify-content-center gap-3 flex-wrap mt-4">
            <a href="/Identity/Account/Register" class="rc-btn rc-btn-primary">JOIN NOW</a>
            <a href="/Identity/Account/Login" class="rc-btn rc-btn-secondary">LOGIN</a>
        </div>
    </div>

    <div class="container-fluid full-width-container mt-5">
        <div class="row g-4 justify-content-center">
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="rc-feature-box">
                    <img src="https://www.formula1.com/etc/designs/fom-website/social/f1-default-share.jpg" alt="F1 Championship">
                    <h3>ALL CHAMPIONSHIPS</h3>
                    <p>Browse through major motorsport series like F1, MotoGP, and WEC</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="rc-feature-box">
                    <img src="~/images/Belgium_Circuit.jpg" alt="Track Circuits">
                    <h3>TRACK CIRCUITS</h3>
                    <p>Explore layouts of legendary tracks across the globe</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="rc-feature-box">
                    <img src="~/images/motogp.png" alt="Race Start">
                    <h3>UPCOMING RACES</h3>
                    <p>Never miss a race — stay updated with real-time calendars</p>
                </div>
            </div>
        </div>
    </div>
</div>